// Seção de Declarações
var
qtde_cavalos,total_ferr:inteiro

inicio
// Seção de Comandos
escreval("Entre com a qtde de cavalos: ")
leia(qtde_cavalos)

total_ferr <- qtde_cavalos * 4

escreval("O total de ferraduras necessárias é de:")
escreval(total_ferr)

 
fimalgoritmo
